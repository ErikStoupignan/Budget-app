<p style="color: green"><%= notice %></p>

<div id="groups">

<% if @groups.empty? %>

  <div class='d-flex flex-column justify-content-center px-2 gap-3 container-lg'>
    <h2 class="">There are not categories yet!</h2>
    <p class="">Create your first category by clicking on the button below.</p>
  </div>

<% else %>

  <% @groups.includes([:user]).order('created_at DESC').each do |group| %>

    <% if can? :manage, group %>
      <div class='d-flex justify-content-center'>
        <%= link_to group do %>
          <%= render group %>
        <% end %>
      </div>
      <br />
    <% end %>

  <% end %>

<% end %>
</div>

<div class='btn btn-success text-white badge mx-2'>
  <%= link_to "New category", new_group_path, class: 'link-light' %>
</div>
