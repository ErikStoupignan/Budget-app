<p style="color: green"><%= notice %></p>

<%= render @group %>

<br />

<div class='px-2'>

<% @group.movements.each do |x|%>
  <%= render x %>
<% end %>

</div>

<div class='btn btn-success text-white badge mx-2'>
  <%= link_to 'New Transaction', new_group_movement_path(@group), class: 'link-light' %>
</div>

<div class='border d-flex justify-content-center gap-3'>
  <%= link_to "Edit this group", edit_group_path(@group) %> |
  <%= link_to "Delete this category", @group, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
</div>
